@model UILayer.Models.InsurerResponse
@{
    ViewData["Title"] = "AcceptInsurance";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 modal-open mt-2 text-center mr-1 ml-1 mb-3">
        <form asp-action="AcceptInsurance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="BuyerId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AssetId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="AssetName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="AssetType" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="StartDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="EndDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="CountryName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PremiumAmount" class="control-label"></label>
                <input asp-for="PremiumAmount" class="form-control" placeholder="PremiumAmount" />
                <span asp-validation-for="PremiumAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownPay"></label>
                <input asp-for="DownPay" class="form-control" placeholder="DownPayment" />
                <span asp-validation-for="DownPay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmiInterval"></label>
                <input asp-for="EmiInterval" class="form-control" placeholder="EmiInterval" />
                <span asp-validation-for="EmiInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BrokerName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="BuyerName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <textarea asp-for="Feedback" class="form-control" placeholder="Feedback"></textarea>
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastInsurerName" class="form-control" placeholder="LastInsurer" readonly />
            </div>
            <div class="form-group">
                <select asp-for="PremiumType" asp-items="@Model.PremLists" class="form-control"></select>
                <span asp-validation-for="PremiumType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-success">
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>



